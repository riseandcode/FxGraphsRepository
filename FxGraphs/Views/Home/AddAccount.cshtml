@model DL.AccountData
@{
    ViewBag.Title = "AddAccount";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>AddAccount</h2>

<script type="text/javascript">
    function CreateAccount() {
        var date = new Date();
        var offset = date.getTimezoneOffset() / 60;
        $('#TimeZone').val(offset);
        $('#Date').val(date.toJSON());
    }
</script>

<div class="mainContent" style="margin: 40px">
    @using (Html.BeginForm("SaveAccount", "Home", FormMethod.Post))
    {
        <div style="margin: 20px auto; width: 90%">
            <h4 style="margin-bottom: 20px">Create New Account</h4>
            @Html.Partial("AccountDataEditor", Model)

            <input type="submit" onclick="CreateAccount()" value="Create Account" />
        </div>
    }
</div>
